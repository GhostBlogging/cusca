{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "assets",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "jquery",
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "assets",
    "src/build",
    "src/img",
    "src/styles"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
