{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "assets",
    "types": [
      "jquery",
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "exclude": [
    "node_modules",
    "src/build"
  ],
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
