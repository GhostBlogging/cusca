<form method="post" action="{{action}}" class="{{form_class}}">
    {{! This is required for the form to work correctly }}
    {{hidden}}

    <div class="{{#if error}}is-invalid-input{{/if}} input-group">
        {{input_email class="subscribe-emai input-group-field" placeholder=placeholder value=email autofocus=autofocus}}
        <div class="input-group-button">
            <button class="button alert subscribe-btn" type="submit">Subscribe</button>
        </div>
    </div>
    {{! This is used to get extra info about where this subscriber came from }}
    {{script}}
</form>

{{#if error}}
    <p class="main-error">{{{error.message}}}</p>
{{/if}}
