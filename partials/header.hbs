{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header" id="site-header">
    {{!--  Featured image --}}
    {{#is "index, tag, author"}}
        <div class="site-header-bg" id="site-header-bg">
            <div class="cover-image" style="background: url({{#if @blog.cover_image}} {{@blog.cover_image}} {{else}}{{asset "img/sven-scheuermeier-178631-unsplash.jpg" }}{{/if}}) no-repeat center center; background-size: cover;"></div>
            <div class="header-overlay"></div>
        </div>
    {{/is}}

    {{!-- Top bar  --}}
    <nav class="top-bar" data-sticky data-options="marginTop:0;" data-sticky-on="small">
        <div class="grid-container">
            <div class="grid-x">
                <div class="cell small-12 large-3 top-bar-left">
                    <a href="{{@blog.url}}" class="top-bar-title">
                        {{#if @blog.logo}}
                            <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}"/>
                        {{else}}
                            {{@blog.title}}
                        {{/if}}
                    </a>
                    <span class="toggle-responsive-btn" data-responsive-toggle="main-menu" data-hide-for="large">
                        <button type="button" data-toggle>
                            <i class="fas fa-bars bar-icon"></i>
                        </button>
                    </span>
                </div>
                <div class="cell small-12 large-9 top-bar-right" id="main-menu">
                    {{> "site-nav"}}
                </div>
            </div>
        </div>
    </nav>

    {{!-- Header title --}}
    {{#is "home, paged, tag, author"}}
        <div class="header-title">
            <div class="site-header-content grid-container">
                <div class="header-title-inner grid-x">

                    {{#is "index"}}
                        {{#if @blog.logo}}
                            <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                        {{else}}
                            <h1 class="site-title">{{@blog.title}}</h1>
                        {{/if}}
                    {{else}}
                        {{#is "tag"}}
                            {{#tag}}
                                <h1 class="site-title">#{{name}}</h1>
                            {{/tag}}
                        {{/is}}
                        {{{block "author_header"}}}
                    {{/is}}
                </div>
            </div>
        </div>
    {{/is}}
</header>
